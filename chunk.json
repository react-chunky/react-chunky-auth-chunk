{
  "name": "auth",
  "api": {
    "login": {
      "operation": "login",
      "method": "GET",
      "endpoint": "/user",
      "secure": false,
      "auth": {
        "type": "Basic",
        "base64": true
      }
    }
  },
  "routes": {
    "loading": {
      "actions": {
        "findToken": {
          "type": "retrieve",
          "source": "cache",
          "key": "chunky/auth_token"
        }
      }
    },
    "login": {
      "actions": {
        "login": {
          "source": "firebase",
          "operation": "login/email"
        }
      }
    }
  },
  "transitions": {
    "not_authenticated": {
      "route": "login",
      "replace": true
    },
    "authenticated": {
      "replace": true
    }
  }
}

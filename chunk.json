{
  "name": "auth",
  "routes": {
    "loading": {
      "operations": {
        "checkUser": "cache://retrieve/account",
        "getAccount": "firebase://retrieve/users/:uid#account",
        "cleanUp": "local://delete"
      }
    },
    "login": {
      "startOperationsOnMount": false,
      "operations": {
        "signIn": "firebase://login",
        "signUp": "firebase://register",
        "getAccount": "firebase://retrieve/users/:uid#account"
      },
      "dark": false,
      "fields": {
        "email": { "type": "email" },
        "password": { "type": "password", "secure": true },
        "password2": { "type": "password2", "secure": true, "extended": true }
      },
      "strings": {
        "action": "signIn",
        "actionExtended": "signUp",
        "header": "loginToAccount",
        "headerExtended": "createAccount",
        "continue": "continue",
        "question": "needAccount",
        "questionExtended": "haveAccount",
        "emailEmpty": "enterEmail",
        "emailPlaceholder": "email",
        "passwordEmpty": "enterPassword",
        "passwordPlaceholder": "password",
        "password2Empty": "enterPassword2",
        "password2Placeholder": "password2"
      }
    }
  },
  "transitions": ["replace://login", "replace://dashboard"]
}

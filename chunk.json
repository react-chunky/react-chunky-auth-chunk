{
  "name": "auth",
  "api": {
    "login": {
      "operation": "login",
      "method": "GET",
      "endpoint": "/user",
      "secure": false,
      "auth": {
        "type": "Basic",
        "base64": true
      }
    }
  },
  "routes": {
    "loading": {
      "actions": ["cache://retrieve/auth#checkAuth"]
    },
    "login": {
      "actions": ["firebase://login/email#signIn"],
      "dark": true
    }
  },
  "transitions": ["replace://login#showLogin", "replace://#showDashboard"]
}